    <!-- Controller:
    <controller name="Teacher">
    	<extends controller="Typical"/>
    	<action name="new" icon="library-plus" keystroke="Control N"
        	class="actions.CreateTeacher">
    	</action>
	</controller>    
    -->
    
    <controller name="VersionIssues">
    	<action name="new" hidden="true"
			icon="library-plus"
			class="org.openxava.xavaprojects.actions.CreateNewIssueInVersionAction"/>
	</controller>
	
	<!-- tmr ini -->
	<controller name="MyCalendar">
		<extends controller="CRUD"/>
		<action name="new" 
			class="org.openxava.xavaprojects.actions.NewIssueFromMyCalendarAction"
			image="new.gif"
			icon="library-plus"
			keystroke="Control N"
			loses-changed-data="true">
			<set property="restoreModel" value="true"/>			
		</action>
	</controller>
	
	<!-- 
	tmr This to start MyCalendar in list mode always. 
	tmr We should add to OpenXava a simpler way to do it. Add as a Feature Request. 
	-->
	<controller name="Mode">
	
		<action name="list"
			icon="chevron-left"
			class="org.openxava.actions.GoListAction"
			keystroke="F9"
			loses-changed-data="true"/>
	
		<action name="initOnList"
			on-init="true"
			hidden="true"
			class="org.openxava.xavaprojects.actions.InitOnListAction">
			<set property="module" value="MyCalendar"/>
		</action>							
	</controller>	
	
	<!-- tmr fin -->
	
    
</controllers>